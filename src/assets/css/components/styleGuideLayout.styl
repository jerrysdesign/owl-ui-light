@require "../config"

StyleGuideColorPrimary = #FF9937
StyleGuideColorGray = #EEEEEE

baseSize = 12

*
  margin 0
  padding 0

*, *:before, *:after
  box-sizing border-box

html, body
  height 100%

body
  font baseSize/1.5 'Montserrat', sans-serif
  color #333
  overflow-x hidden

.layout-fixed
  display flex
  min-height 100%

$fullHeight
  height 100vh
  top 0
  bottom 0
.sidebar
  position absolute
  width 220px
  left 0
  @extend $fullHeight

.content
  flex 1
  left 0
  @extend $fullHeight
  border solid 1px StyleGuideColorGray
  background-color #fff
  transform translate3d(0, 0, 0)
  transition transform .3s

  &.layout-slide
    transform translate3d(220px, 0, 0)

.button
  cursor pointer
  &:before
    content '\f0c9'
    font 42px fontawesome

.title
  font-size baseSize * 1.333px
  line-height baseSize * 10px
  text-align center
  text-transform uppercase
  letter-spacing baseSize / 2px
  color #EEEEEE
  border-bottom 1px solid StyleGuideColorGray

$sidebar__item--current
  box-shadow inset 5px 0 0 StyleGuideColorPrimary

.nav
  > li
    a
      position relative
      display block
      &:hover
        cursor pointer
    > a
      padding 15px 15px 15px 25px
      font-size 15px
      color #3B3D40
      border-bottom 1px solid StyleGuideColorGray
      &:hover
        @extend $sidebar__item--current
      &.active
        color StyleGuideColorPrimary
        @extend $sidebar__item--current

    li
      a
        padding 7px 15px 7px 25px
        font-size 13px
        color #838D8F
        background-color #F9F9F9
        &:hover
          background-color #ffffff
        &.active
          background-color #ffffff
          color #0D3268
.component-header
  padding: 50px 55px
  background-color: #0D3268

h1
  font-size 16px
  font-weight 400
  color: rgba(#fff, 0.5);

h2
  font-size 36px
  font-weight 400
  color #fff

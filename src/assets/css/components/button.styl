.ripple
  display: block
  position: absolute
  background: rgba(white,.5)
  border-radius: 100%
  transform: scale(0)
/*animation effect*/
.ripple.animate
  animation: ripple .5s linear

@keyframes ripple
  100%
    opacity: 0
    transform: scale(2.5)
